{
	"compilerOptions": {
		"lib": [
			"ES2020",
			"dom"
		],
		"target": "es2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"rootDir": "./src",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"strict": true
	}
}